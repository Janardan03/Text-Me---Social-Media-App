<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.textMe">

    <application
        android:allowBackup="true"
        android:icon="@drawable/text_me_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/text_me_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.SocialMedia">
        <activity android:name="com.example.textMe.CreatePostActivity"/>
        <activity android:name="com.example.textMe.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.textMe.MainActivity" />
    </application>

</manifest>